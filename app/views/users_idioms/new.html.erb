<%= form_for(@users_idioms, url: users_idioms_path, html: {class: "w-full max-w-xll"}) do |f| %>

  <%= render 'shared/error_messages', object: f.object %>

  <div class="flex flex-wrap -mx-3 mb-6">
    <div class="w-full md:w-1/4 px-3 mb-6 md:mb-0">
      <%= f.label :name_idiom, 'Nombre del idioma', :class => "block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" %>
      <%= f.text_field :name_idiom, class: 'appearance-none block w-full bg-gray-200 text-gray-700 border
      rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white' %>
    </div>
    <div class="w-full md:w-1/4 px-3 mb-6 md:mb-0">
      <%= f.label :to_speak, 'Lo habla:', :class => "block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" %>
      <%= f.select(:to_speak, options_for_select([["Selecciona una opcion", ""], "Muy bien", "Bien", "Regular"]), {}, { :class => 'appearance-none block w-full bg-gray-200 text-gray-700 border
      rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white' }) %>
    </div>
    <div class="w-full md:w-1/4 px-3 mb-6 md:mb-0">
      <%= f.label :to_read, 'Lo lee:', :class => "block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" %>
      <%= f.select(:to_read, options_for_select([["Selecciona una opcion", ""], "Muy bien", "Bien", "Regular"]), {}, { :class => 'appearance-none block w-full bg-gray-200 text-gray-700 border
      rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white' }) %>
    </div>

    <div class="w-full md:w-1/4 px-3 mb-6 md:mb-0">
      <%= f.label :to_write, 'Lo escribe:', :class => "block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" %>
      <%= f.select(:to_write, options_for_select([["Selecciona una opcion", ""], "Muy bien", "Bien", "Regular"]), {}, { :class => 'appearance-none block w-full bg-gray-200 text-gray-700 border
      rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white' }) %>
    </div>
  </div>

  <%= f.submit "Crear estudio", class: "btn btn-primary" %>
<% end %>
