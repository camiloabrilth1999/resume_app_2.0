<% if !user_signed_in?%>
<div class="flex flex-wrap">
	<div class="w-full md:w-1/2 xl:w-1/2 p-3">
			<img src="https://empleados.morelos.gob.mx/v3/img/empleado-01.png" alt="portal-de-empleados">
	</div>
	<div class="w-full md:w-1/2 xl:w-1/2 p-3">

			<h2 class="text-gray-400 text-4xl">Bienvenido al portal para empleados del sector publico </h2>
			<p class="text-gray-400 text-2xl">Resume app es el mejor portal para empleados del sector publico.</p>
			<%= link_to new_user_session_path, :class => "text-2xl" do %>
					<span class="text-green-400">Inicia sesion haciendo click aqui.</span>
			<% end %>
			<br>
			<%= link_to new_user_registration_path, :class => "text-2xl" do %>
					<span class="text-green-400">Registrate haciendo click aqui.</span>
			<% end %>
	</div>
	</div>
<% else %>
<div class="flex flex-wrap">
	<div class="w-full p-3">
		<h1 class="text-5xl">Bienvenido(a) <%=full_name(current_user)%></h1>
		<p class="text-3xl">Has iniciado sesion en Resume App, la mejor aplicacion web para revisar tus datos como aspirante a trabajador del sector publico.</p>
	</div>
</div>
<% end %>
