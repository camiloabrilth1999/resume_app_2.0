<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="flex flex-wrap -mx-3 mb-6">
    <div class="w-1/3 sm:w-full md:w-full lg:w-1/3 xl:w-1/3 px-3 mb-6 md:mb-0">
      <%= f.label :name, 'Nombre(s)', :class => "block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" %><br />
      <%= f.text_field :name, autofocus: true, placeholder: "Ingresa tu(s) nombre(s)", :class => "appearance-none block w-full bg-gray-200 text-gray-700 border
      rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white" %>
    </div>

    <div class="w-1/3 sm:w-full md:w-full lg:w-1/3 xl:w-1/3 px-3 mb-6 md:mb-0">
      <%= f.label :first_surname, 'Primer apellido', :class => "block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" %><br />
      <%= f.text_field :first_surname, autofocus: true, placeholder: "Ingresa tu primer apellido", :class => "appearance-none block w-full bg-gray-200 text-gray-700
       border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500" %>
    </div>

    <div class="w-1/3 sm:w-full md:w-full lg:w-1/3 xl:w-1/3 px-3 mb-6 md:mb-0">
      <%= f.label :second_surname, 'Segundo apellido', :class => "block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" %><br />
      <%= f.text_field :second_surname, autofocus: true, placeholder: "Ingresa tu primer apellido", :class => "appearance-none block w-full bg-gray-200 text-gray-700
       border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500" %>
    </div>
  </div>

  <!-- Segunda fila -->

  <div class="flex flex-wrap -mx-3 mb-6">
    <div class="w-1/3 sm:w-full md:w-full lg:w-1/3 xl:w-1/3 px-3 mb-6 md:mb-0">
      <%= f.label :email,'Correo electronico', :class => "block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => "appearance-none block w-full bg-gray-200 text-gray-700
       border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500" %>
    </div>

    <div class="w-1/3 sm:w-full md:w-full lg:w-1/3 xl:w-1/3 px-3 mb-6 md:mb-0">
      <%= f.label :password, 'Contrasena', :class => "block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", placeholder: "Ingresa tu contrasena", :class => "appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200
      rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white focus:border-gray-500" %>
    </div>

    <div class="w-1/3 sm:w-full md:w-full lg:w-1/3 xl:w-1/3 px-3 mb-6 md:mb-0">
      <%= f.label :password_confirmation,'Confirma tu contrasena', :class => "block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Repite tu contrasena", :class => "appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200
      rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white focus:border-gray-500" %>
    </div>
  </div>

  <!-- Tercera fila -->

  <div class="flex flex-wrap -mx-3 mb-6">
    <div class="w-1/3 sm:w-full md:w-full lg:w-1/3 xl:w-1/3 px-3 mb-6 md:mb-0">
      <%= f.label :number_phone, 'Numero de celular', :class => "block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" %><br />
      <%= f.text_field :number_phone, autofocus: true, placeholder: "Ingresa tu numero de celular", :class => "appearance-none block w-full bg-gray-200 text-gray-700 border
      rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white" %>
    </div>

    <div class="w-1/3 sm:w-full md:w-full lg:w-1/3 xl:w-1/3 px-3 mb-6 md:mb-0">
      <%= f.label :birth_date, 'Fecha de nacimiento', :class => "block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" %><br />
      <%= f.date_field :birth_date, autocomplete: "birth_date", :class => "appearance-none block w-full bg-gray-200 text-gray-700
       border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500"%>
    </div>

    <div class="w-1/3 sm:w-full md:w-full lg:w-1/3 xl:w-1/3 px-3 mb-6 md:mb-0">
      <%= label :gender_id, 'Genero', :class => "block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" %><br />
      <div class="relative">
        <%= f.collection_select(:gender_id,
          Gender.all, :id, :description, {:prompt=>true}, {:class=>'block w-full bg-gray-200 border border-gray-200 text-gray-700 py-3 px-4 pr-8 rounded leading-tight focus:outline-none focus:bg-white focus:border-gray-500'}) %>
      </div>
    </div>
  </div>

  <!-- Cuarta fila -->

  <div class="flex flex-wrap -mx-3 mb-2">

    <div class="w-1/4 sm:w-full md:w-full lg:w-1/4 xl:w-1/4 px-3 mb-6 md:mb-0">
      <%= label :national_identifier_type_id, 'Tipo de identificador nacional', :class => "block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" %><br />
      <div class="relative">
        <%= f.collection_select(:national_identifier_type_id,
          NationalIdentifierType.all, :id, :resume_desc, {:prompt=>true}, {:class=>'block w-full bg-gray-200 border border-gray-200 text-gray-700 py-3 px-4 pr-8 rounded leading-tight focus:outline-none focus:bg-white focus:border-gray-500'}) %>
      </div>
    </div>

    <div class="w-1/4 sm:w-full md:w-full lg:w-1/4 xl:w-1/4 px-3 mb-6 md:mb-0">
        <%= f.label :number_national_identifier, 'N. de identificacion nacional', :class => "block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" %><br />
      <div class="relative">
        <%= f.text_field :number_national_identifier, autofocus: true, placeholder: "Ingresa tu numero de identificacion nacional", :class => "appearance-none block w-full bg-gray-200 text-gray-700
         border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500" %>
      </div>
    </div>

    <div class="w-1/4 sm:w-full md:w-full lg:w-1/4 xl:w-1/4 px-3 mb-6 md:mb-0">
      <%= label :nacionality_type_id, 'Tipo de nacionalidad', :class => "block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" %><br />
      <div class="relative">
        <%= f.collection_select(:nacionality_type_id,
          NacionalityType.all, :id, :description, {:prompt=>true}, {:class=>'block w-full bg-gray-200 border border-gray-200 text-gray-700 py-3 px-4 pr-8 rounded leading-tight focus:outline-none focus:bg-white focus:border-gray-500'}) %>
      </div>
    </div>

    <div class="w-1/4 sm:w-full md:w-full lg:w-1/4 xl:w-1/4 px-3 mb-6 md:mb-0">
      <%= label :country_nationality, 'País de nacionalidad', :class => "block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" %><br />
      <div class="relative">
        <%= f.collection_select(:country_nationality, Country.all, :id, :name, {:prompt=>true}, {:class=>'block w-full bg-gray-200 border border-gray-200 text-gray-700 py-3 px-4 pr-8 rounded leading-tight focus:outline-none focus:bg-white focus:border-gray-500'}) %>
      </div>

    </div>
  </div>

  <!-- Otra fila -->

  <div class="flex flex-wrap -mx-3 mb-6">
    <div class="w-1/3 sm:w-full md:w-full lg:w-1/3 xl:w-1/3 px-3 mb-6 md:mb-0">
      <%= label :military_card_type_id, 'Clase de la libreta militar', :class => "block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" %><br />
      <div class="relative">
        <%= f.collection_select(:military_card_type_id,
          MilitaryCardType.all, :id, :description, {:prompt=>true}, {:class=>'block w-full bg-gray-200 border border-gray-200 text-gray-700 py-3 px-4 pr-8 rounded leading-tight focus:outline-none focus:bg-white focus:border-gray-500'}) %>
      </div>
    </div>

    <div class="w-1/3 sm:w-full md:w-full lg:w-1/3 xl:w-1/3 px-3 mb-6 md:mb-0">
      <%= f.label :number_military_card, 'Numero de libreta', :class => "block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" %><br />
      <%= f.text_field :number_military_card, autofocus: true, placeholder: "Ingresa tu numero de libreta", :class => "appearance-none block w-full bg-gray-200 text-gray-700 border
      rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white" %>
    </div>

    <div class="w-1/3 sm:w-full md:w-full lg:w-1/3 xl:w-1/3 px-3 mb-6 md:mb-0">
      <%= f.label :dm_military_card, 'DM', :class => "block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" %><br />
      <%= f.text_field :dm_military_card, autofocus: true, placeholder: "Ingresa tu numero de DM", :class => "appearance-none block w-full bg-gray-200 text-gray-700 border
      rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white" %>
    </div>
  </div>

  <!-- Quinta fila -->

  <div class="flex flex-wrap -mx-3 mb-2">
    <div class="w-1/3 sm:w-full md:w-full lg:w-1/3 xl:w-1/3 px-3 mb-6 md:mb-0">
      <%= label :country, 'País de nacimiento', :class => "block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" %><br />
      <div class="relative">
        <%= collection_select(:country, :country_id, Country.all, :id, :name, {:prompt=>true}, {:class=>'block w-full bg-gray-200 border border-gray-200 text-gray-700 py-3 px-4 pr-8 rounded leading-tight focus:outline-none focus:bg-white focus:border-gray-500'}) %>
      </div>
    </div>

    <div class="w-1/3 sm:w-full md:w-full lg:w-1/3 xl:w-1/3 px-3 mb-6 md:mb-0">
      <%= label :state_id, 'Departamento de nacimiento', :class => "block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" %><br />
      <div class="relative">
        <%= grouped_collection_select(:department, :country_id, Country.all, :departments, :name, :id, :name, {:prompt=>true}, {:class=>'block w-full bg-gray-200 border border-gray-200 text-gray-700 py-3 px-4 pr-8 rounded leading-tight focus:outline-none focus:bg-white focus:border-gray-500'}) %>
      </div>
    </div>

    <div class="w-1/3 sm:w-full md:w-full lg:w-1/3 xl:w-1/3 px-3 mb-6 md:mb-0">
      <%= f.label :city_birth_id, 'Ciudad de nacimiento', :class => "block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" %><br />
      <div class="relative">
        <%= f.grouped_collection_select(:city_birth_id, Department.all, :cities, :name, :id, :name, {:prompt=>true}, {:class=>'block w-full bg-gray-200 border border-gray-200 text-gray-700 py-3 px-4 pr-8 rounded leading-tight focus:outline-none focus:bg-white focus:border-gray-500'}) %>
      </div>
    </div>
  </div>

  <!-- Sexta fila -->

  <div class="flex flex-wrap -mx-3 mb-2">
    <div class="w-1/4 sm:w-full md:w-full lg:w-1/4 xl:w-1/4 px-3 mb-6 md:mb-0">
      <%= label :country, 'País donde reside', :class => "block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" %><br />
      <div class="relative">
        <%= collection_select(:country, :country_id, Country.all, :id, :name, {:prompt=>true}, {:class=>'block w-full bg-gray-200 border border-gray-200 text-gray-700 py-3 px-4 pr-8 rounded leading-tight focus:outline-none focus:bg-white focus:border-gray-500'}) %>
      </div>
    </div>

    <div class="w-1/4 sm:w-full md:w-full lg:w-1/4 xl:w-1/4 px-3 mb-6 md:mb-0">
      <%= label :state_id, 'Departamento donde reside', :class => "block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" %><br />
      <div class="relative">
        <%= grouped_collection_select(:department, :country_id, Country.all, :departments, :name, :id, :name, {:prompt=>true}, {:class=>'block w-full bg-gray-200 border border-gray-200 text-gray-700 py-3 px-4 pr-8 rounded leading-tight focus:outline-none focus:bg-white focus:border-gray-500'}) %>
      </div>
    </div>

    <div class="w-full md:w-1/4 px-3 mb-6 md:mb-0">
      <%= f.label :city_residence_id, 'Ciudad donde reside', :class => "block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" %><br />
      <div class="relative">
        <%= f.grouped_collection_select(:city_residence_id, Department.all, :cities, :name, :id, :name, {:prompt=>true}, {:class=>'block w-full bg-gray-200 border border-gray-200 text-gray-700 py-3 px-4 pr-8 rounded leading-tight focus:outline-none focus:bg-white focus:border-gray-500'}) %>
      </div>
    </div>

    <div class="w-1/4 sm:w-full md:w-full lg:w-1/4 xl:w-1/4 px-3 mb-6 md:mb-0">
      <%= f.label :address, 'Direccion de residencia', :class => "block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" %><br />
      <%= f.text_field :address, autofocus: true, placeholder: "Ingresa tu direccion de correspondencia", :class => "appearance-none block w-full bg-gray-200 text-gray-700
       border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500" %>
    </div>
  </div>

  <div class="flex flex-wrap -mx-3 mb-2">
    <div class="w-full px-3">
      <%= f.label :current_password, 'Contrasena actual', :class => "block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" %> <i>(Necesitamos su contraseña actual para confirmar sus cambios)</i><br />
      <%= f.password_field :current_password, autocomplete: "current-password", :class => "appearance-none block w-full bg-gray-200 text-gray-700
       border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500" %>
    </div>
  </div>

  <div class="flex flex-wrap -mx-3 mb-2 actions">
    <%= f.submit "Actualizar", class: "actions bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline w-full" %>
  </div>
  <% end %>
  <div class="flex flex-wrap -mx-3 mb-2">
    <div class="w-full px-3">
      <h3 class="text-3xl">Cancel my account</h3>

      <p class="text-xl">Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "actions bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline my-8"%></p>

      <%= link_to "Atras", :back, class: "actions bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline w-full" %>
    </div>
  </div>
